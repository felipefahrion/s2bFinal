@model IEnumerable<DesgrudaCoisa.Models.Anuncio>

@{
    ViewBag.Title = "Notificações";
}

<h2>Notificações</h2>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Descrição da Mensagem
        </th>
        <th>
            Ações
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.DataPublicacao)*@
                @Html.ActionLink("Fechar Negócio", "Edit", new { id = item.ID }, new { @class = "label label-warning" })
                @Html.ActionLink("Desistir da venda", "Details", new { id = item.ID }, new { @class = "label label-info" })
            </td>
        </tr>
    }

</table>