@model IEnumerable<DesgrudaCoisa.Models.Anuncio>
@{
    ViewBag.Title = "Página Inicial";
}
<link href="~/SiteView/CSS/HomeListAnuncio.css" rel="stylesheet" type="text/css" />


<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/carrossel2.jpg" style="height: 400px;  width: 100%" class="img-responsive">
                    </div>

                    <div class="item">
                        <img src="~/Images/carrossel3.png" style="height: 400px;  width: 100%" class="img-responsive">
                    </div>

                    <div class="item">
                        <img src="~/Images/carrossel1.jpg" style="height: 400px;  width: 100%" class="img-responsive">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12" style="padding-top: 15px; padding-bottom: 15px; ">
            <h2>Anúncios adicionados recentemente</h2>
        </div>
            @foreach (var item in Model)
            {
                <div class="col-sm-3" style="margin-bottom: 40px;">
                    <article class="col-item">
                        <div class="photo">
                            @if (item.Imagem.ImageUrl != null)
                            {
                                <a><img style="height: 250px; padding: 15px;" src="@item.Imagem.ImageUrl" alt=@item.TituloAnuncio class="img-responsive" /></a>
                            }
                            else
                            {
                                <a><img style="height: 250px; padding: 15px;" class="img-responsive" src="@Url.Action("GetImage", "Anuncio", new { id = item.AnuncioID})" /></a>
                            }
                        </div>
                        <div class="info">
                            <div class="row">
                                <div class="price-details col-md-12">
                                    <h1><b>@Html.DisplayFor(modelItem => item.TituloAnuncio)</b></h1><br /><br />
                                    <p class="details">
                                        @Html.DisplayFor(modelItem => item.formataDescricao)...
                                    </p>
                                    <br />
                                    <span class="price-new">R$@Html.DisplayFor(modelItem => item.Valor)</span>
                                </div>
                            </div>
                        </div>
                    </article>
                    @Html.ActionLink("Entrar no anuncio", "Details", "Anuncio", new { id = item.AnuncioID }, new { @class = "btn btn-primary" })
                </div>
            }
        </div>
</div>