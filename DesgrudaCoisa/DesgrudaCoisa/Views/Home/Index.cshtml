@model IEnumerable<DesgrudaCoisa.Models.Anuncio>
@{
    ViewBag.Title = "Home Page";
}
<link href="~/SiteView/CSS/HomeListAnuncio.css" rel="stylesheet" type="text/css" />

<div class="jumbotron">
    <div class="container text-center">
        <h1>Online Store</h1>
        <p>Mission, Vission & Values</p>
    </div>
</div>
<div class="container">
    <div class="row">
        <h2>Ecommerce Products Display Layout</h2>


        @foreach (var item in Model)
        {
            <div class="col-sm-3">
                <article class="col-item">
                    <div class="photo">
                        <div class="options-cart-round">
                            <button class="btn btn-default" title="Add to cart">
                                <span class="fa fa-shopping-cart"></span>
                            </button>
                        </div>
                        <a href="#"> <img src="https://unsplash.it/500/300?image=0" class="img-responsive" alt="Product Image" /> </a>
                    </div>
                    <div class="info">
                        <div class="row">
                            <div class="price-details col-md-6">
                                <p class="details">
                                    @Html.DisplayFor(modelItem => item.TituloAnuncio)
                                </p>
                                <h1>Sample Product</h1>
                                <span class="price-new">R$@Html.DisplayFor(modelItem => item.Valor)</span>
                            </div>
                        </div>
                    </div>
                </article>
                <p class="text-center">Hover over image</p>
            </div>
        }
    </div>
</div>