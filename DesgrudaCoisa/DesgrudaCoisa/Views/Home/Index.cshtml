@model IEnumerable<DesgrudaCoisa.Models.Anuncio>
@{
    ViewBag.Title = "Página Inicial";
}
<link href="~/SiteView/CSS/HomeListAnuncio.css" rel="stylesheet" type="text/css" />
<div class="container">
    <div class="row">
        @*<div class="col-xs-6">*@
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:200px; height:110px; margin: 0 auto">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/1.png">
                </div>

                <div class="item">
                    <img src="~/Images/2.png">
                </div>

                <div class="item">
                    <img src="~/Images/3.png">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    @*</div>*@
</div>


<div class="container">
    <div class="row">
        <h2>Anúncios adicionados recentemente</h2>
        @foreach (var item in Model)
            {
            <div class="col-sm-3">
                <article class="col-item">
                    <div class="photo">
                        @if (item.Imagem.ImageUrl != null)
                        {
                            <a><img width="200" src="@item.Imagem.ImageUrl" alt=@item.TituloAnuncio class="img-responsive" /></a>
                        }
                        else
                        {
                            <a><img width="200" class="img-responsive" src="@Url.Action("GetImage", "Anuncio", new { id = item.ID})" /></a>
                        }
                    </div>
                    <div class="info">
                        <div class="row">
                            <div class="price-details col-md-6">
                                <p class="details">
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </p>
                                <h1><b>@Html.DisplayFor(modelItem => item.TituloAnuncio)</b></h1>
                                <span class="price-new">R$@Html.DisplayFor(modelItem => item.Valor)</span>
                            </div>
                        </div>
                    </div>
                </article>
                @Html.ActionLink("Entrar no anuncio", "Details", "Anuncio", new { id = item.ID }, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>
