<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NOME DA EMPRESA</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqueryui")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="~/SiteView/CSS/LayoutHome.css">
    <link rel="stylesheet" type="text/css" href="~/SiteView/CSS/LayoutShared.css">
</head>
<body>
    <!-- Fixed navbar -->
    <div class="menu_topo">
        <nav class="navbar navbar-fixed-top" style="margin-bottom: 7px;background-color: #2874F0; ">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" style="background-color: #F1F1F1; COL">
                        <img src="~/Images/menu.png" class="img-responsive" style="width: 20px;" />
                    </button>
                    @Html.ActionLink("Nome da Empresa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand corBranca margin-top-5" })
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right  margin-top-5">
                        <li>@Html.ActionLink("Página Inicial", "Index", "Home", null, new { @class = "corBranca link-menu" })</li>
                        @*<li>@Html.ActionLink("Sobre", "About", "Home", null, new { @class = "corBranca link-menu" })</li>*@
                        <li class="margin-top-15">@{Html.RenderAction("CategoriaDropDown", "Categoria", new { @class = "corBranca link-menu" }); }</li>
                        <li>@Html.ActionLink("Criar Anuncios", "Create", "Anuncio", null, new { @class = "corBranca link-menu" })</li>
                        <li>@Html.ActionLink("Meus Anuncios", "ListMeusAnuncios", "Anuncio", null, new { @class = "corBranca link-menu" })</li>
                        <li>@{Html.RenderAction("BadgesNotificacoes", "Anuncio", new { @class = "corBranca link-menu" }); }</li>
                        <li>@Html.ActionLink("Contato", "Contact", "Home", null, new { @class = "corBranca link-menu" })</li>
                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="pesquisa_topo" style="margin-top: -85px;">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-right" style="padding-top: 4px;">
                    @using (Html.BeginForm("ListAnuncios", "Anuncio", null, FormMethod.Post, new { @class = "navbar-form", role = "search" }))
                    {
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Pesquisar Anúncio" name="Pesquisar">
                            <div class="input-group-btn">
                                <button class="btn btn-warning" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>



    @RenderBody()

    <div class="container-fluid">
        <hr />
        <center>
            <p>&copy; @DateTime.Now.Year - Help Us</p>
        </center>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
