<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NOME DA EMPRESA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="~/SiteView/CSS/LayoutHome.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nome da Empresa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <div class="col-sm-2 col-md-2">
                    @using (Html.BeginForm("ListAnuncios", "Anuncio", null, FormMethod.Post, new { @class = "navbar-form", role = "search" }))
                    {
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Pesquisar Anúncio" name="Pesquisar">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    }
                </div>
                @Html.Partial("_LoginPartial")
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Página Inicial", "Index", "Home")</li>
                    <li>@Html.ActionLink("Criar Anuncios", "Create", "Anuncio")</li>
                    <li>@Html.ActionLink("Meus Anuncios", "ListMeusAnuncios", "Anuncio")</li>
                    <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                    <li>@{Html.RenderAction("CategoriaDropDown", "Categoria"); }</li>
                    <li>@Html.ActionLink("Filtro", "Filtro", "Anuncio")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Help Us</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
